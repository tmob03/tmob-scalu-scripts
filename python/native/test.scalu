sandbox test_equality

map {
    test_event : @equality
}

service equality{
    a = 5
    [echo running equality tests]
    [echo test 1]
    if (a == 5) {[echo passed]}
    [echo test 2]
    if (a == 5) {[echo passed]} else {[echo failed]}
    [echo test 3]
    if (a == 6) {[echo failed]} else {[echo passed]}
    [echo test 4]
    if (23 == 23) {[echo passed]} else {[echo failed]}
}

