service input_9 {
	if (space9 != 0) {
		[echo This space is filled, try again]
	} else {
		[echo You placed an O on the ninth space]
		rng = (rng ^ 7)
		space9 = 1
		@render_board
		@check_win
		if (win == 0) {
		@ai_turn
		}
	}
}

service cycle_rng {
    rng = rng + 1
	rng = rng ^ (rng << 7)
    rng = rng ^ (rng >> 5)
    rng = rng ^ (rng << 3)
}

service entropy_rng {
    rng = rng + 1
}